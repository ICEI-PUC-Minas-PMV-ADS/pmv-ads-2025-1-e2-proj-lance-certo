@model IEnumerable<LanceCerto.WebApp.Models.Leilao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vencedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InicioEm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FimEm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaiorLanceAtual)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imovel.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vencedor.UsuarioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InicioEm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FimEm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaiorLanceAtual)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeilaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeilaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeilaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model LanceCerto.WebApp.Models.Imovel

@{
    ViewData["Title"] = "Detalhes do Imóvel";
}

<h2 class="mb-4">Detalhes do Imóvel</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title text-primary fw-bold">@Model.Titulo</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Descrição:</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3">Tipo:</dt>
            <dd class="col-sm-9">@Model.Tipo</dd>

            <dt class="col-sm-3">Endereço:</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>

            <dt class="col-sm-3">Cidade:</dt>
            <dd class="col-sm-9">@Model.Cidade</dd>

            <dt class="col-sm-3">Estado:</dt>
            <dd class="col-sm-9">@Model.Estado</dd>

            <dt class="col-sm-3">Preço Mínimo:</dt>
            <dd class="col-sm-9">R$ @Model.PrecoMinimo.ToString("N2")</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        @if (!string.IsNullOrWhiteSpace(Model.ImagemUrl))
        {
            <div class="text-center mt-4">
                <img src="@Model.ImagemUrl" alt="Imagem do Imóvel @Model.Titulo"
                     class="img-fluid rounded border"
                     style="max-height: 300px;" />
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
</div>
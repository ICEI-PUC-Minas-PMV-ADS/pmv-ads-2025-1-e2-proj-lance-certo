@model LanceCerto.WebApp.Models.Imovel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h2>Confirmar Exclusão</h2>

<div class="alert alert-danger mt-4">
    <strong>Você tem certeza que deseja excluir este imóvel?</strong>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Titulo</h4>
        <p class="card-text"><strong>Tipo:</strong> @Model.Tipo</p>
        <p class="card-text"><strong>Cidade:</strong> @Model.Cidade</p>
        <p class="card-text"><strong>Estado:</strong> @Model.Estado</p>
        <p class="card-text"><strong>Preço Mínimo:</strong> R$ @Model.PrecoMinimo.ToString("N2")</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="ImovelId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@model LanceCerto.WebApp.Models.Imovel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h2 class="mb-4 text-danger">Confirmar Exclusão</h2>

<div class="alert alert-warning border border-danger">
    <strong>Atenção:</strong> Esta ação não poderá ser desfeita. Tem certeza de que deseja excluir este imóvel?
</div>

<div class="card mt-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title fw-bold text-primary">@Model.Titulo</h5>
        <p class="card-text mb-1"><strong>Tipo:</strong> @Model.Tipo</p>
        <p class="card-text mb-1"><strong>Endereço:</strong> @Model.Endereco</p>
        <p class="card-text mb-1"><strong>Cidade:</strong> @Model.Cidade</p>
        <p class="card-text mb-1"><strong>Estado:</strong> @Model.Estado</p>
        <p class="card-text mb-1"><strong>Preço Mínimo:</strong> R$ @Model.PrecoMinimo.ToString("N2")</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="ImovelId" />

    <div class="d-flex flex-wrap gap-2">
        <button type="submit" class="btn btn-danger">Sim, excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
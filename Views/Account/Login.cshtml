@model LanceCerto.WebApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Entrar";
}

<h2 class="mb-4">Entrar</h2>

<form asp-action="Login" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" type="email" autocomplete="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input asp-for="Senha" class="form-control" type="password" autocomplete="current-password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="LembrarMe" class="form-check-input" />
        <label asp-for="LembrarMe" class="form-check-label"></label>
    </div>

    <div class="d-flex flex-wrap gap-2 align-items-center">
        <button type="submit" class="btn btn-primary">Entrar</button>
        <a asp-controller="Account" asp-action="Cadastro" class="btn btn-link">Criar nova conta</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}